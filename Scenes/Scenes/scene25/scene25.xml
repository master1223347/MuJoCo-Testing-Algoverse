<mujoco>
  <option gravity="0 0 -9.81"/>
  <worldbody>
    <!-- Curved Ramp -->
    <body name="curved_ramp" pos="0 0 0">
      <geom type="mesh" mesh="curved_ramp_mesh" rgba="0.6 0.4 0.2 1" friction="0.5 0.5 0.5"/>
    </body>
    <!-- Ground Surface -->
    <body name="surface" pos="-10 0 -10">
      <geom type="plane" size="25 25 0.1" rgba="0.8 0.8 0.8 1" friction="1 1 1"/>
    </body>
    <!-- Rolling Sphere -->
    <body name="sphere" pos="-5 0 1">
      <geom type="sphere" size="0.4" density="1" rgba="0.1 0.7 0.7 1"/>
      <joint name="sphere_joint" type="free"/>
    </body>
    <!-- Sliding Cube -->
    <body name="cube" pos="5 0 1">
      <geom type="box" size="0.5 0.5 0.5" density="1" rgba="0.7 0.1 0.7 1" friction="0 0 0"/>
      <joint name="cube_joint" type="free"/>
    </body>
  </worldbody>
</mujoco>
